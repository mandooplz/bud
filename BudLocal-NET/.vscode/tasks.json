{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/${workspaceFolderBasename}.sln"
            ],
            "problemMatcher":"$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/BudLocal/BudLocal.csproj"
            ],
            "problemMatcher":"$msCompile"
        },

        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test"
            ],
            "problemMatcher":"$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
